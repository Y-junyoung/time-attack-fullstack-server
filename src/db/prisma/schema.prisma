generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int          @id @default(autoincrement())
  email             String       @unique
  encryptedPassword String
  profile           UserProfile?
  createdAt         DateTime     @default(now())
  myDeals           Deal[]       @relation("myDeals")
  interestDeals     Interest[]   @relation("interestDeals")
}

model UserProfile {
  userId      String   @id
  user        User     @relation(fields: [userId], references: [email])
  nickname    String
  phoneNumber String?
  updatedAt   DateTime @updatedAt
}

model Deal {
  id         Int        @id @default(autoincrement())
  title      String
  content    String
  location   String
  price      Int
  imgSrc     String?
  seller     User       @relation("myDeals", fields: [sellerId], references: [email])
  sellerId   String
  interested Interest[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Interest {
  id        Int      @id @default(autoincrement())
  user      User     @relation("interestDeals", fields: [userId], references: [email])
  deal      Deal     @relation(fields: [dealId], references: [id])
  userId    String
  dealId    Int
  createdAt DateTime @default(now())

  @@unique([userId, dealId])
}
